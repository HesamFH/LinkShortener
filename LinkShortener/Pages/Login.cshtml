@page
@model LinkShortener.Pages.LoginModel
@{
}

<div class="breadcrumb">
    <h3 class="breadcrumb-item">ورود به حساب کاربری</h3>
</div>
<div class="text-center">
    <form asp-page="/Login" method="post">
        <div class="form-group mt-3">
            <label for="UserName">نام کاربری</label>
            <input type="text" class="form-control" id="UserName" name="UserName" placeholder="نام کاربری">
        </div>
        <div class="form-group mt-3">
            <label for="Password">رمز عبور</label>
            <input type="password" class="form-control" name="Password" id="Password" placeholder="رمز عبور">
        </div>
        @if(!string.IsNullOrEmpty(ViewData["Error"] as string))
        {
            <div class="alert alert-danger my-2">
                @ViewData["Error"]
            </div>
        }
        <button type="submit" class="btn btn-primary mt-4">ورود</button>
    </form>
</div>
